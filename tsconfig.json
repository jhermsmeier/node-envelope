{
  "compilerOptions": {
    "lib": ["es2022"],
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "allowJs": true,
    "checkJs": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "target": "es2017",
    "outDir": "dist"
  },
  "include": ["lib/**/*.js", "test/**/*.js"],
  "exclude": ["node_modules"]
}
